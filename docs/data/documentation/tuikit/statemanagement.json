{"abstract":[{"text":"Learn how to manage application state and data flow in TUIKit.","type":"text"}],"primaryContentSections":[{"kind":"content","content":[{"type":"heading","level":2,"anchor":"Overview","text":"Overview"},{"type":"paragraph","inlineContent":[{"text":"TUIKit provides several mechanisms for managing state:","type":"text"}]},{"type":"unorderedList","items":[{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"codeVoice","code":"@State"}]},{"text":": Local view state","type":"text"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"codeVoice","code":"@Environment"}]},{"type":"text","text":": Top-down data flow"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"code":"Binding","type":"codeVoice"}],"type":"strong"},{"type":"text","text":": Two-way data binding"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"code":"@AppStorage","type":"codeVoice"}]},{"text":": Persistent application settings","type":"text"}],"type":"paragraph"}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"type":"codeVoice","code":"@SceneStorage"}],"type":"strong"},{"text":": Scene-specific state restoration","type":"text"}]}]}]},{"type":"heading","level":2,"anchor":"State-Property-Wrapper","text":"@State Property Wrapper"},{"type":"paragraph","inlineContent":[{"code":"@State","type":"codeVoice"},{"text":" stores local state within a view and automatically triggers re-renders when the value changes:","type":"text"}]},{"type":"codeListing","code":["struct Counter: View {","    @State var count: Int = 0","","    var body: some View {","        VStack(spacing: 1) {","            Text(\"Count: \\(count)\")","                .bold()","","            HStack(spacing: 2) {","                Button(\"Decrement\") { count -= 1 }","                Button(\"Increment\") { count += 1 }","            }","        }","    }","}"],"syntax":"swift"},