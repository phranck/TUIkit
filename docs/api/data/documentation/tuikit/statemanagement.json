{"metadata":{"roleHeading":"Article","title":"State Management","role":"article"},"abstract":[{"type":"text","text":"Learn how to manage application state and data flow in TUIKit."}],"identifier":{"interfaceLanguage":"swift","url":"doc:\/\/com.anthropic.tuikit.documentation\/documentation\/TUIKit\/StateManagement"},"schemaVersion":{"major":0,"minor":3,"patch":0},"primaryContentSections":[{"kind":"content","content":[{"type":"heading","level":2,"text":"Overview","anchor":"Overview"},{"inlineContent":[{"type":"text","text":"TUIKit provides several mechanisms for managing state:"}],"type":"paragraph"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"code":"@State","type":"codeVoice"}]},{"text":": Local view state","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"code":"@Environment","type":"codeVoice"}]},{"type":"text","text":": Top-down data flow"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"type":"strong","inlineContent":[{"type":"codeVoice","code":"Binding"}]},{"text":": Two-way data binding","type":"text"}]}]},{"content":[{"type":"paragraph","inlineContent":[{"inlineContent":[{"code":"@AppStorage","type":"codeVoice"}],"type":"strong"},{"text":": Persistent application settings","type":"text"}]}]},{"content":[{"inlineContent":[{"type":"strong","inlineContent":[{"type":"codeVoice","code":"@SceneStorage"}]},{"type":"text","text":": Scene-specific state restoration"}],"type":"paragraph"}]}],"type":"unorderedList"},{"type":"heading","level":2,"text":"@State Property Wrapper","anchor":"State-Property-Wrapper"},{"inlineContent":[{"code":"@State","type":"codeVoice"},{"type":"text","text":" stores local state within a view and automatically triggers re-renders when the value changes:"}],"type":"paragraph"},{"code":["struct Counter: View {","    @State var count: Int = 0","","    var body: some View {","        VStack(spacing: 1) {","            Text(\"Count: \\(count)\")","                .bold()","","            HStack(spacing: 2) {","                Button(\"Decrement\") { count -= 1 }","                Button(\"Increment\") { count += 1 }","            }","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","level":3,"text":"Rules for @State","anchor":"Rules-for-State"},{"items":[{"content":[{"type":"paragraph","inlineContent":[{"type":"text","text":"Declare as "},{"type":"codeVoice","code":"private"},{"type":"text","text":" to prevent external modification"}]}]},{"content":[{"inlineContent":[{"type":"text","text":"Initialize with a default value"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"type":"text","text":"Use only in views, not in view models"}],"type":"paragraph"}]},{"content":[{"inlineContent":[{"text":"State is destroyed when view is removed from hierarchy","type":"text"}],"type":"paragraph"}]}],"type":"unorderedList"},{"code":["struct InputForm: View {","    @State private var name: String = \"\"","    @State private var age: Int = 0","    @State private var agreed: Bool = false","","    var body: some View {","        VStack(spacing: 1) {","            \/\/ View content","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","level":2,"text":"Binding","anchor":"Binding"},{"inlineContent":[{"text":"A ","type":"text"},{"type":"codeVoice","code":"Binding"},{"text":" creates a two-way connection between a view and a state variable:","type":"text"}],"type":"paragraph"},{"code":["struct Parent: View {","    @State var isExpanded: Bool = false","","    var body: some View {","        VStack {","            Child(isExpanded: $isExpanded)","        }","    }","}","","struct Child: View {","    @Binding var isExpanded: Bool","","    var body: some View {","        Button(isExpanded ? \"Collapse\" : \"Expand\") {","            isExpanded.toggle()","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"text":"Use ","type":"text"},{"code":"$","type":"codeVoice"},{"text":" to create a binding to a state property.","type":"text"}],"type":"paragraph"},{"type":"heading","level":3,"text":"Creating Custom Bindings","anchor":"Creating-Custom-Bindings"},{"inlineContent":[{"type":"text","text":"Create computed bindings for complex logic:"}],"type":"paragraph"},{"code":["struct FilteredList: View {","    @State private var showDetails: Bool = false","","    var detailsBinding: Binding<Bool> {","        Binding(","            get: { showDetails },","            set: { newValue in","                if newValue {","                    print(\"Details opened\")","                }","                showDetails = newValue","            }","        )","    }","","    var body: some View {","        Button(\"Toggle\") {","            detailsBinding.wrappedValue.toggle()","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","level":2,"text":"@Environment and Environment Keys","anchor":"Environment-and-Environment-Keys"},{"inlineContent":[{"text":"Environment provides top-down data flow to all child views:","type":"text"}],"type":"paragraph"},{"code":["struct App: View {","    var body: some View {","        VStack {","            ContentView()","                .environment(\\.theme, customTheme)","        }","    }","}","","struct ContentView: View {","    @Environment(\\.theme) var theme","","    var body: some View {","        Text(\"Using current theme\")","            .foregroundColor(theme.foreground)","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","level":3,"text":"Custom Environment Keys","anchor":"Custom-Environment-Keys"},{"inlineContent":[{"type":"text","text":"Define custom environment values:"}],"type":"paragraph"},{"code":["struct UserPreferencesKey: EnvironmentKey {","    static let defaultValue = UserPreferences()","}","","extension EnvironmentValues {","    var userPreferences: UserPreferences {","        get { self[UserPreferencesKey.self] }","        set { self[UserPreferencesKey.self] = newValue }","    }","}","","\/\/ Usage","struct App: View {","    var body: some View {","        VStack {","            ContentView()","                .environment(\\.userPreferences, UserPreferences(language: \"de\"))","        }","    }","}","","struct ContentView: View {","    @Environment(\\.userPreferences) var prefs","","    var body: some View {","        Text(\"Language: \\(prefs.language)\")","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"heading","level":2,"text":"@AppStorage","anchor":"AppStorage"},{"inlineContent":[{"type":"codeVoice","code":"@AppStorage"},{"type":"text","text":" persists values to storage (UserDefaults on macOS, JSON file on Linux):"}],"type":"paragraph"},{"code":["struct App: View {","    @AppStorage(\"theme\") var selectedTheme: String = \"green\"","    @AppStorage(\"fontSize\") var fontSize: Int = 12","","    var body: some View {","        VStack {","            Text(\"Current theme: \\(selectedTheme)\")","            \/\/ Settings UI","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"inlineContent":[{"type":"text","text":"Changes to "},{"code":"@AppStorage","type":"codeVoice"},{"type":"text","text":" variables are automatically saved and restored across app launches."}],"type":"paragraph"},{"type":"heading","level":2,"text":"@SceneStorage","anchor":"SceneStorage"},{"inlineContent":[{"type":"codeVoice","code":"@SceneStorage"},{"type":"text","text":" preserves state for the current scene:"}],"type":"paragraph"},{"code":["struct MyScene: Scene {","    @SceneStorage(\"selectedTab\") var selectedTab: String = \"home\"","    @SceneStorage(\"scrollPosition\") var scrollPosition: Int = 0","","    var body: some Scene {","        WindowGroup {","            VStack {","                if selectedTab == \"home\" {","                    HomeView()","                }","            }","        }","    }","}"],"type":"codeListing","syntax":"swift"},{"type":"headi